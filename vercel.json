{
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {

        "buildCommand": "cd apps/frontend && yarn install && yarn build",

        "outputDirectory": "apps/frontend/dist"
      }
    },
    {
      "src": "apps/backend/api/**/*.mjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [

    { "src": "/api/(.*)", "dest": "apps/backend/api/$1" },

  
    { "handle": "filesystem" },


    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
